<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.appetite.FragmentRecipeInformation">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_recipeingredients_servings" />
        <TextView
            android:id="@+id/fragment_recipeingredients_servingstext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/fragment_recipeingredients_servings"
            android:textAppearance="?attr/textAppearanceListItem"
            />
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/fragment_recipeingredients_list"
    android:name="com.appetite.FragmentRecipeIngredients"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager"
    tools:context="com.appetite.FragmentRecipeIngredients"
    tools:listitem="@layout/fragment_recipe_ingredients_list_item"
    android:nestedScrollingEnabled="false"/>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>